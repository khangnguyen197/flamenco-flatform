<resources>
    <!-- Base application theme. -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Widget.Button_Gradient" parent="android:Widget">
        <item name="android:background">@drawable/home_gradient_btn</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/calibri_bold</item>
    </style>

    <style name="Widget.Button_Outline" parent="android:Widget">
        <item name="android:background">@drawable/home_outline_btn</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/calibri_bold</item>
    </style>


    <style name="Widget.Input" parent="android:Widget">
        <item name="android:background">@drawable/input</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/matteBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="Widget.InputContainer" parent="android:Widget">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="Widget.Label" parent="android:Widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="ErrText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14.5sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="SearchInput" parent="android:Widget">
        <item name="android:editTextColor">@color/matteBlack</item>
        <item name="android:textColorHint">@color/matteBlack</item>
    </style>

    <style name="SearchInputFrame" parent="android:Widget">
        <item name="android:background">@drawable/search_input</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="RowRecyclerView" parent="android:Widget">
        <item name="android:textColor">@color/matteBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/calibri_regular</item>
    </style>

    <style name="NavigationView" >
        <item name="android:listDivider">@color/border</item>
        <item name="android:textColorSecondary">@color/border</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
        <item name="barLength">30dp</item>
        <item name="gapBetweenBars">7dp</item>
    </style>

</resources>