<resources>
    <!-- Base application theme. -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Widget.Button_Gradient" parent="android:Widget">
        <item name="android:background">@drawable/home_gradient_btn</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/calibri_bold</item>
    </style>

    <style name="Widget.Button_Outline" parent="android:Widget">
        <item name="android:background">@drawable/home_outline_btn</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/calibri_bold</item>
    </style>

    <style name="Widget.Input" parent="android:Widget">
        <item name="android:background">@drawable/input</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/matteBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="Widget.InputContainer" parent="android:Widget">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="Widget.Label" parent="android:Widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="ErrText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14.5sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="SearchInput" parent="android:Widget">
        <item name="android:editTextColor">@color/matteBlack</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="fontFamily">@font/calibri_light</item>
    </style>

    <style name="SearchInputFrame" parent="android:Widget">
        <item name="android:background">@drawable/search_input</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="RowRecyclerView" parent="android:Widget">
        <item name="android:textColor">@color/matteBlack</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/calibri_regular</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@color/border</item>
        <item name="android:textColorSecondary">@color/border</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
        <item name="barLength">30dp</item>
        <item name="gapBetweenBars">7dp</item>
    </style>

    <style name="Widget.Ripple" parent="android:Widget">
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="fontFamily">@font/calibri_regular</item>
    </style>

    <style name="Header.Label" parent="android:Widget">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/calibri_bold</item>
    </style>

    <style name="ContentLayout" parent="android:Widget">
        <item name="android:background">@drawable/shadow_bg</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Circle" parent="android:Widget">
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="CircleImg" parent="android:Widget">
        <item name="android:background">@drawable/circle</item>
        <item name="srcCompat">@drawable/hotel_default</item>
    </style>


    <style name="InformTextView" parent="android:Widget">
        <item name="background">@drawable/rectangular_outline</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/matteBlack</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:textColor">@color/link</item>
        <item name="color">@color/matteBlack</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

</resources>